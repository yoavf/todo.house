{
  "name": "todohouse",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && uv run uvicorn app.main:app --reload --port 8000",
    "install:all": "pnpm install && cd backend && uv sync",
    "test:backend": "cd backend && pytest",
    "test:backend:unit": "cd backend && pytest tests/test_*_unit.py -v",
    "test:backend:integration": "cd backend && pytest tests/test_*_integration.py -v -m integration",
    "test:backend:watch": "cd backend && pytest-watch",
    "test:frontend": "cd frontend && pnpm test",
    "test:frontend:unit": "cd frontend && pnpm run test:unit",
    "test:frontend:integration": "cd frontend && pnpm run test:integration",
    "test:frontend:watch": "cd frontend && pnpm run test:watch",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "supabase": "^2.31.4"
  },
  "lint-staged": {
    "backend/**/*.py": [
      "cd backend && uv run ruff check --fix",
      "cd backend && uv run mypy",
      "cd backend && uv run pytest tests/test_*_unit.py -v"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && pnpm run lint",
      "cd frontend && pnpm test -- --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
